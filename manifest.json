{
    "manifest_version": 3,
    "name": "GitHub AutoSelect for Gradescope",
    "version": "1.0",
    "description": "Automatically selects the GitHub button on Gradescope.",
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "scripting"
    ],
    "host_permissions": [
        "https://www.gradescope.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["https://www.gradescope.com/*"],
        "js": ["content.js"]
    }]
}
